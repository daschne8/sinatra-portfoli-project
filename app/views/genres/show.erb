<h2><%= @genre.name %></h2>

<h3>Games in this Genre</h3>
<ul>
  <% @genre.games.uniq.each do |g| %>
    <li><a href="/games/<%=g.slug%>"><%=g.name%></a></li>
  <% end %>
</ul>

<h3>Developers in this genre</h3>
<ul>
  <% @genre.developers.uniq.each do |d| %>
    <li><a href="/developers/<%=d.slug%>"><%= d.name %></a></li>
  <% end %>
</ul>

<h3>Enjoyed By</h3>
<ul>
  <% @genre.users.uniq.each do |u| %>
    <li><a href="/users/<%=u.slug%>"><%= u.username %></a></li>
  <% end %>
</ul>
